<h1>Products</h1>

<div class="row">
  <table>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Barcode</th>
      <th>Last Modified</th>
      <th></th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><img src='<%= product.image %>'/></td>
        <td><%= product.title %></td>
        <td><%= product.barcode %></td>
        <td><%= product.updated_at %></td>
        <td>
          <button  onclick="location.href='/products/<%=product.id%>/edit';" type="button" class="btn btn-primary">Edit</button>
          <button  onclick="location.href='/products/<%=product.id%>/delete';" type="button" class="btn btn-danger">Delete</button>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Barcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="row">
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><img src="<%= product.image %>"/></td>
          <td><%= product.title %></td>
          <td><%= product.barcode %></td>
          <td><%= button_to 'Show', product, method: :get, class: 'btn btn-primary' %></td>
          <td><%= button_to 'Edit', edit_product_path(product), method: :get, class: 'btn btn-info' %></td>
          <td><%= button_to 'Destroy', product, method: :delete, class: 'btn btn-danger'  %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
